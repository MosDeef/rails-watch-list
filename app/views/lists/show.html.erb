<div class="card-trip">
  <div class="card-trip-infos">
      <h2><%= @list.name %></h2>
      </div>
   <%= link_to 'Add a movie to this list', new_list_bookmark_path(@list)  %>
  <%= link_to 'Back to list of lists', lists_path  %>
</div>


   <p><strong>Comments</strong></p>
    <ul class="list-group">
      <% @list.bookmarks.each do |bookmark| %>
        <li class="list-group-item"><%= bookmark.comment %>
        <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </li>
      <% end %>
